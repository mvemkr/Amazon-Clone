<% layout('layout') %>
<div class="container heavy-top">
    <div class="row">
        <div class="col-lg-6 col-md-offset-3">
            <% if (message.length > 0) {  %>
                <div class="alert alert-danger alert-dismissable">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <%= message %>
                </div>
            <% } %>
            <form method="post" action="">
                <h1>Login</h1>
                <div class="form-group">
                    <label for="email">Email: </label>
                    <input type="email" class="form-control" name="email">
                </div>
                <div class="form-group">
                    <label for="password">Password: </label>
                    <input type="password" class="form-control" name="password">
                </div>
                <div class="form-group"><button type="submit" class="btn btn-success">Submit</button></div>
                <div class="form-group">
                    <a href="/auth/facebook" class="btn btn-block btn-social btn-facebook"><i class="fa fa-facebook"></i> Sign in with Facebook</a>
                </div>


            </form>
        </div>
    </div>
</div>
